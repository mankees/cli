#!/usr/bin/env node
var VERSION = require('../package.json').version;

var fs = require('fs');
var path = require('path');

var program = require('commander');
var requireDir = require('require-dir');

var mankee = require('../');


main();

function main() {
    var mankeeDir = getMankeeDir();
    var args, mankees;

    if(!fs.existsSync(mankeeDir)) return console.error('Create ' + mankeeDir + ' and fill it with joy!');

    mankees = requireDir(mankeeDir);

    program.
        version(VERSION).
        option('-l --list', 'list').
        option('-s --silent', 'silent').
        parse(process.argv);

    if(program.list) listMankees(mankees);
    else executeMankees(mankees, program.args, program.silent);
}

function getMankeeDir() {
    return path.join(getUserDir(), '.mankee');
}

function getUserDir() {
    // http://stackoverflow.com/a/9081436/228885
    return process.env[(process.platform == 'win32')? 'USERPROFILE': 'HOME'];
}

function listMankees(mankees) {
    var names = Object.keys(mankees);

    if(names.length) console.log(names.join(', '));
    else console.error('No mankees found! :(');
}

function executeMankees(mankees, executables, silent) {
    console.log('should execute mankees now');
}
